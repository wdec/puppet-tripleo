/var/log/containers/*/*.log {
  rotate <%= @rotate %>
  size <%= @size %>
  missingok
  notifempty
<%- if @delaycompress %>
  delaycompress
<%- end %>
  postrotate
    /sbin/lsof -nPs +L1 +D /var/log 2>&1|\
    /bin/perl -ne '/\S+\s+(\d+).*\/var\/log\/.*\(deleted\)/ && print "$1\n"' |\
    /bin/xargs -n1 -r -t kill -HUP
  endscript
}
